{
  "name": "oct-report-lib",
  "version": "0.0.0-alpha1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "postinstall": "npm run build",
    "build": "npm run build:lib",
    "build:lib": "ng-packagr -p projects/ng-oct-report/ng-package.json",
    "pack": "cd dist/ng-oct-report&& npm pack",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "copy:readme": "copyfiles ./README.md ./dist/ng-oct-report"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "projects/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/cli": "^13.3.9",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.3.9",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "luxon": "^2.5.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.9",
    "@angular/compiler-cli": "~13.1.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt": "^17.0.3",
    "@types/jasmine": "~4.0.0",
    "@types/luxon": "^3.0.1",
    "copyfiles": "^2.4.1",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.0.3",
    "ng-packagr": "^13.1.0",
    "prettier": "^2.7.1",
    "typescript": "~4.5.2"
  },
  "ng-publish-to-git": {
 
    "packages": [
      {
        "name": "oct-report-lib",
        "publish": true,
        "repositoryUrl": "git+ssh://git@gitlab.com/octiga/oct-report-lib.git"
      }
    ]
  }
}
